@using System.Globalization
<!-- Views/Home/Index.cshtml -->
@model ABCRetailers.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}
<!-- Hero Section -->
<div class="hero-section text-center mb-5">
    <h1 class="hero-heading">
        <i class="fas fa-store"></i> Welcome to ABC Retailers!
    </h1>
    <p class="hero-subtitle">
        Discover a seamless shopping experience with ABCRetailers — browse a wide range of high-quality products, enjoy unbeatable deals, and stay updated with the latest arrivals, all in one convenient platform.
    </p>
</div>

<!-- Action Buttons -->
<div class="row mb-5">
    <div class="col-md-3 mb-3">
        <a asp-controller="Customer" asp-action="Index" class="action-card btn-lg w-100 h-100 d-flex flex-column justify-content-center">
            <i class="fas fa-users fa-2x mb-2"></i>
            <span>View Customers</span>
            <small>(@Model.CustomerCount total)</small>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-controller="Product" asp-action="Index" class="action-card btn-lg w-100 h-100 d-flex flex-column justify-content-center">
            <i class="fas fa-box fa-2x mb-2"></i>
            <span>View Products</span>
            <small>(@Model.ProductCount total)</small>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-controller="Order" asp-action="Index" class="action-card btn-lg w-100 h-100 d-flex flex-column justify-content-center">
            <i class="fas fa-shopping-cart fa-2x mb-2"></i>
            <span>View Orders</span>
            <small>(@Model.OrderCount total)</small>
        </a>
    </div>
    <div class="col-md-3 mb-3">
        <a asp-controller="Upload" asp-action="Index" class="action-card btn-lg w-100 h-100 d-flex flex-column justify-content-center">
            <i class="fas fa-upload fa-2x mb-2"></i>
            <span>Upload Files</span>
            <small>(Payment proofs)</small>
        </a>
    </div>
</div>

<!-- Storage Initialization (if needed) -->
@if (Model.CustomerCount == 0 && Model.ProductCount == 0 && Model.OrderCount == 0)
{
    <div class="alert alert-warning shadow-sm">
        <h5><i class="fas fa-exclamation-triangle"></i> First Time Setup</h5>
        <p>It looks like this is your first time running the application. Click the button below to initialize Azure Storage.</p>
        <form asp-action="InitializeStorage" method="post" style="display: inline;">
            <button type="submit" class="btn btn-warning">
                <i class="fas fa-cog"></i> Initialize Azure Storage
            </button>
        </form>
    </div>
}

<!-- Featured Products Section -->
<div class="featured-products-section">
    <h2 class="mb-4"> Featured Products</h2>

    @if (Model.FeaturedProducts.Any())
    {
        <div class="row justify-content-center">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">
                    <div class="product-card h-100">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" class="card-img-top" alt="@product.ProductName" style="height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 150px;">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <div class="card-body d-flex flex-column">
                            <h6 class="product-title text-center">@product.ProductName</h6>
                            <p class="product-subtitle text-center flex-grow-1">
                                @(product.Description.Length > 50 ? product.Description.Substring(0, 50) + "..." : product.Description)
                            </p>
                            <div class="mt-auto text-center">
                                <p class="product-price">
                                    @product.Price.ToString("C", new System.Globalization.CultureInfo("en-ZA"))
                                </p>
                                <small class="text-muted">Stock: @product.StockAvailable</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info shadow-sm">
            <i class="fas fa-info-circle"></i> No products available yet.
            <a asp-controller="Product" asp-action="Create" class="alert-link">Add your first product</a>!
        </div>
    }
</div>